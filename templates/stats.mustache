  <table>
    {{# hurl_stats}}
     <tr>
        <td>{{ stat }}</td>
        <td>{{ value }}</td>
      </tr>
    {{/ hurl_stats}}
  </table>

  <h2>Disk</h2>

  <table>
    {{# disk_stats}}
