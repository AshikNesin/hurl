<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
    "http://www.w3.org/TR/html4/strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
    <title>Hurl</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" type="text/css" href="/css/pygment_trac.css">
    <script src="/js/jquery.min.js" type="text/javascript"></script>
    <script src="/js/jquery.form.js" type="text/javascript"></script>
    <script src="/js/json2.js" type="text/javascript"></script>    
    <script src="/js/hurl.js" type="text/javascript"></script>    
</head>
<body>
  <div id="inset">
    <div id="content">
      <h1 id="logo">hurl</h1>
      <form id="hurl-form" method="post" action=".">
        <p>
          <input type="text" name="url" value="http://baconfile.com/leah.xml" />
        </p>
        <p>
          <select name="method">
            <option id="GET">GET</option>
            <option id="POST">POST</option>
            <option id="PUT">PUT</option>
            <option id="DELETE">DELETE</option>
          </select>
        </p>
        <p>
          <select name="auth">
            <option id="none">No auth</option>
            <option id="basic">HTTP Basic</option>
          </select>
        </p>
        <p id="send-wrap" class="clearwrap">
          <button type="submit" class="bigbutton">Send</button>
          <img src="/img/ajax-loader.gif" id="spinner" style="display:none;"/>
        </p>
      </form>
      <p>Request</p>
      <div class="code-wrap">
        <div id="request" class="code-text">
        </div>
      </div>
      <p>Response</p>
      <div class="code-wrap">
       <div id="response" class="code-text">
        </div>
      </div>
    </div>
  </div>
</body>
</html>