<h2>Your hurls</h2>
<% if not @hurls.empty? %>
  <table id="archive">
    <% for hurl in @hurls %>
      <tr>
        <td><a href="/hurls/<%= hurl['id'] %>"><%= hurl['url'] %></a></td>
        <td><%= hurl['method'] %></td>
        <td><%= hurl['auth'] == "none" ? "no auth" : "HTTP basic" %></td>
        <td class="date relatize"><%= hurl['date'] %></td>
        <td><a href="#" class="hurl-delete"><img src="/img/delete.png" class="delete" title="remove"/></a></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <div class="unicorn">
    <img src="/img/unicorn.png" title="unicorn"/>
    <p>We found some hurls, but none are yours.</p>
  </div>
<% end %>